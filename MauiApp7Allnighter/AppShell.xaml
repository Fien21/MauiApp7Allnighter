<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:local="clr-namespace:MauiApp7Allnighter"
       x:Class="MauiApp7Allnighter.AppShell"
       
    <!-- Flyout Navigation -->
    <FlyoutItem Title="Home" Icon="home_icon.png">
        <ShellContent Title="Main Page" ContentTemplate="{DataTemplate local:MainPage}" />
    </FlyoutItem>
    <FlyoutItem Title="Settings" Icon="settings_icon.png">
        <ShellContent Title="Settings" ContentTemplate="{DataTemplate local:SettingsPage}" />
    </FlyoutItem>

    <!-- Tab Navigation -->
    <TabBar>
        <Tab Title="Students">
            <ShellContent Title="Add Student" ContentTemplate="{DataTemplate local:MainPage}" />
        </Tab>
        <Tab Title="About">
            <ShellContent Title="About App" ContentTemplate="{DataTemplate local:AboutPage}" />
        </Tab>
    </TabBar>
</Shell>
